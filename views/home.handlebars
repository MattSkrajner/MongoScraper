<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1>MongoDB News Scraper</h1>
            <h3>View the latest stories from the New York Times</h3>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body">
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br><br>
                    <button type="button" class="btn save" data-id={{this._id}}>Save This Story</button>
                </div>
            </div>
            {{/each}}
        {{/if}}
    </div>
</div>
